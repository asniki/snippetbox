{{define "title"}}Your Account{{end}}

{{define "main"}}
    <h2>Your Account</h2>
    {{with .User}}
     <table>
        <tr>
            <th>Name</th>
            <td>{{.Name}}</th>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{.Email}}</th>
        </tr>
        <tr>
            <th>Joined</th>
            <td>{{humanDate .Created}}</th>
        </tr>
    </table>
    {{end}}
{{end}}